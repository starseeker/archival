menu:
	-sed -e "s:/usr/local/ayam:$(PREFIX):g" $(BINDIR)/ayam-desktop.desktop > ~/.local/share/applications/ayam.desktop
	-chmod 755 ~/.local/share/applications/ayam.desktop

