.c.o:
	$(CC) -c $(CFLAGS) $*.c -o $@ $(AYINC)

.cpp.o:
	$(CXX) -c $(CFLAGS) $*.cpp -o $@ -I$(OPENCSGINC) $(AYINC) -Iplugins

all: wrappedayam

plugins: csphere.so sfcurve.so mfio.so metaobj.so mopsi.so

wrapMain.o: wrapMain.c
	$(CC) -c $(CFLAGS) wrapMain.c -I$(WRAPDIR) -I$(WRAPDIR)/libz $(TCLINC) $(TKINC)

ayam:  $(AYAMOBJS) $(TOGLOBJECT) $(AFFINEOBJS) $(ADDOBJS) wrapMain.o
	$(LD) $(ADDOBJS) $(AYAMOBJS) $(TOGLOBJECT) $(WRAPOBJS) wrapMain.o $(EXLDFLAGS) -o ayam $(ADDLIB) $(TKLIB) $(TCLLIB) $(LDSWDYNAMIC) $(GLLIBS) $(X11LIBS) $(RIBOUTLIB) $(AQSISRI2RIB) $(SLCARGSLIB) $(AFFINEOBJS) $(AQSISOBJS) $(TIFFLIB) $(ZLIB) $(LDSWSTATIC) $(STDCPPLIB) $(LDSWDYNAMIC) -lm $(DL)
	$(STRIP) ayam
	$(UPX) ayam
	cat $(WRAPDIR)/null.zip >>ayam

ayamwrap: ayam
	rm -f lib
	ln -s $(WRAPDIR)/lib lib
	zip -A -j -u -9 ayam $(WRAPDIR)/tclInit.tcl
	-cp contrib/tk/tkfbox.tcl lib/tk8.4
	zip -A -r -u -9 ayam lib/wrap0.3 lib/tcl8.4 lib/tk8.4
	rm -f lib
	rm -f BWidgets
	ln -s $(BWIDGETS) BWidgets
	zip -A -r -u -9 ayam BWidgets/*.tcl
	rm -f BWidgets
	cp tcl/ayam.tcl ayam.tcl
	cp ../lib/ayam-splash.gif.uue ./ayam-splash.gif
	zip -A -u -9 ayam ayam.tcl ayam-splash.gif tcl/*.tcl
	rm ayam.tcl
	rm ayam-splash.gif
	rm -f lib

wrappedayam: ayam ayamwrap

rewraprm:
	rm -f ayam

rewrap: rewraprm ayamwrap

